<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ming">

    <TextView
        android:id="@+id/text_view_dialog_fragment_spaces"
        style="@style/TextFragmentViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_dialog_fragment_set_space"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edit_text_dialog_fragment_spaces"
        style="@style/EditTextFragmentViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="@dimen/dialog_fragment_margin_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_dialog_fragment_spaces" />

    <Button
        android:id="@+id/button_dialog_fragment_ok"
        style="@style/ButtonFragmentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_button_dialog_fragment_ok"
        app:layout_constraintTop_toBottomOf="@id/edit_text_dialog_fragment_spaces"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
